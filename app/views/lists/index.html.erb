<div>
  <div class="banner" style="position: relative; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.pixabay.com/photo/2019/11/07/20/48/cinema-4609877_1280.jpg);">
      <div class = "text-left">
        <h1>Show Time!</h1>
        <p>All your favourite movies, one click</p>
      </div>
  </div>

  <div class="overlay-button-container">
    <a class="btn" href="#">Create a movies list</a>
  </div>

  <div class="cards-container">
    <% @lists.each do |list| %>
      <div class="card-trip">
        <img src="https://wallpapercave.com/wp/wp9991397.jpg" />
        <div class="card-trip-infos">
          <div class="d-flex justify-content-center">
            <h2 class="mx-4">Drama</h2>
            <p>Who doesn't like a good one?</p>
          </div>
        </div>
        <%= list.name %>
      </div>
    <% end %>
  </div>
</div>
